@model Participant
<form method="post">

	<div class="border p-3 mt-4">

		<div class="row pb-2">
			<h2 class="text-primary"> Create Participant</h2>
			<hr />
		</div>

		<div class="mb-3 row">
			<label asp-for="FirstName"></label>
			<input asp-for="FirstName" type="text" class="form-control"></input>
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="SecondName" class="col-form-label"></label>
			<input asp-for="SecondName" type="text" class="form-control"></input>
			<span asp-validation-for="SecondName" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="Country" class="col-form-label"></label>
			<input asp-for="Country" type="text" class="form-control"></input>
			<span asp-validation-for="Country" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="ZipCode"></label>
			<input asp-for="ZipCode" type="number" class="form-control"></input>
			<span asp-validation-for="ZipCode" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="City"></label>
			<input asp-for="City" type="text" class="form-control"></input>
			<span asp-validation-for="City" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="Street" class="col-form-label"></label>
			<input asp-for="Street" type="text" class="form-control"></input>
			<span asp-validation-for="Street" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="Birthday" class="col-form-label"></label>
			<input asp-for="Birthday" type="date" class="form-control"></input>
			<span asp-validation-for="Birthday" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="BirthPlace" class="col-form-label"></label>
			<input asp-for="BirthPlace" type="text" class="form-control"></input>
			<span asp-validation-for="BirthPlace" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="Gender" class="col-form-label"></label>
			<select asp-for="Gender" class="form-control" id="status">
				<option value="female">Female</option>
				<option value="male">Male</option>
				<option value="not_mention">Prefer not to mention</option>
			</select>
			<span asp-validation-for="Gender" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="Email" class="col-form-label"></label>
			<input asp-for="Email" type="email" class="form-control"></input>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="Phone" class="col-form-label"></label>
			<input asp-for="Phone" type="tel" class="form-control"></input>
			<span asp-validation-for="Phone" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="Alias" class="col-form-label"></label>
			<input asp-for="Alias" type="text" class="form-control"></input>
			<span asp-validation-for="Alias" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="Condition" class="col-form-label"></label>
			<input asp-for="Condition" type="checkbox"></input>

			<label asp-for="Confidential" class="col-form-label"></label>
			<input asp-for="Confidential" type="checkbox"></input>
		</div>

		<div class="mb-3 row">
			<label asp-for="NbMarathon" class="col-form-label"></label>
			<input asp-for="NbMarathon" type="number" class="form-control"></input>
			<span asp-validation-for="NbMarathon" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="EmergencyPerson" class="col-form-label"></label>
			<input asp-for="EmergencyPerson" type="text" class="form-control"></input>
			<span asp-validation-for="EmergencyPerson" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="EmergencyMobile" class="col-form-label"></label>
			<input asp-for="EmergencyMobile" type="tel" class="form-control"></input>
			<span asp-validation-for="EmergencyMobile" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="Remarks" class="col-form-label"></label>
			<input asp-for="Remarks" type="tel" class="form-control"></input>
			<span asp-validation-for="Remarks" class="text-danger"></span>
		</div>

	</div>

	<div class="row ">
		<!--if it's smaller than medium it will take 6 col-->
		<div class="col-6 col-md-3">
			<button type="submit" class="btn btn-primary form-control">Create</button>
		</div>
		<div class="col-6 col-md-3">
			<a asp-contoller="Participant" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
		</div>
	</div>
	</div>
</form>
@section scripts {
	<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
